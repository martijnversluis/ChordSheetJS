{
  "parser": "babel-eslint",

  "parserOptions": {
    "sourceType": "module"
  },

  "env": {
    "amd": true,
    "browser": true,
    "es6": true,
    "mocha": true
  },

  "extends": "airbnb",

  "rules": {
    "max-len": [2, 120, 2],
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off"
  }
}
